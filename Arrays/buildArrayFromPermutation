//brute force just use the condition arr[i]=nums[nums[i]]


class Solution {
public:
    vector<int> buildArray(vector<int>& nums) {
        vector<int> ans;
        for(int i=0;i<nums.size();i++){
            ans.push_back(nums[nums[i]]);
        }
        return ans;

    }
};

// withought using extra space u add an extra value to each element while replacing elements and then divide it again to get the original solution

class Solution {
public:
    vector<int> buildArray(vector<int>& nums) {
        
        int n=nums.size();
        for(int i=0;i<nums.size();i++){
            nums[i]=nums[i]+ n*(nums[nums[i]]%n);
        }
        for(int i=0;i<nums.size();i++){
            nums[i]=nums[i]/n;
        }
        return nums;

    }
};
