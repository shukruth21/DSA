#include<climits>
long long maxSubarraySum(int arr[], int n)
{
  long long  int currsum=0;
   long long int maxsum=INT_MIN;
    for(int i=0;i<n;i++){
        currsum=currsum+arr[i];
       
        if(currsum<0){
            currsum=0;
        }
        maxsum=max(maxsum,currsum);
    }
   
    
    return maxsum;
}
