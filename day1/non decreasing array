#include <bits/stdc++.h> 
bool isPossible(int *arr, int n)
{
    //  Write your code here.
     int ans=0,pre=INT_MIN,curr=arr[0];
    for(int i=0;i<n-1;i++)
    {
        if(arr[i+1]>=curr)
        {
            pre=curr;curr=arr[i+1];
        }
        else{
            ans++;
            if(arr[i+1]>=pre){
                curr=arr[i+1];
            }
        }
        if(ans>1)
            return false;
    }
    return true;
}
