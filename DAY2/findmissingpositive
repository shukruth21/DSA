#include <bits/stdc++.h> 
int firstMissing(int arr[], int n)
{
    // Write your code here.
     sort(arr,arr+n);

    int ans=1;

    int i=0;

    for(int i=0;i<n;i++){

        if(arr[i]<=0){

            continue;

        }

        else if(ans==arr[i]){

            ans++;

        }

        else if(ans<arr[i]){

            return ans;

        }

        

    }

    if(arr[n-1]<=0){

        return 1;

    }

    ans=arr[n-1]+1;

    return ans;
}
